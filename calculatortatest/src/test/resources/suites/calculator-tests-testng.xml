<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Calculator All Tests Suite" parallel="methods" thread-count="5">
    <test name="Sum test">
        <classes>
            <class name="com.epam.tat.calculator.sum.LongSumTest"/>
            <class name="com.epam.tat.calculator.sum.DoubleSumTest"/>
        </classes>
    </test>

    <test name="Sub test">
        <classes>
            <class name="com.epam.tat.calculator.sub.LongSubTest"/>
            <class name="com.epam.tat.calculator.sub.DoubleSubTest"/>
        </classes>
    </test>

    <test name="Div test">
        <classes>
            <class name="com.epam.tat.calculator.div.LongDivTest"/>
            <class name="com.epam.tat.calculator.div.DoubleDivTest"/>
        </classes>
    </test>

    <test name="Div negative test">
        <classes>
            <class name="com.epam.tat.calculator.div.LongDivNegativeTest"/>
            <class name="com.epam.tat.calculator.div.DoubleDivNegativeTest"/>
        </classes>
    </test>

    <test name="Mult test long values">
        <parameter name="firstNumber" value="1"/>
        <parameter name="secondNumber" value="3"/>
        <parameter name="result" value="3"/>
        <classes>
            <class name="com.epam.tat.calculator.mult.LongMultTest"/>
        </classes>
    </test>

    <test name="Mult test double values">
        <parameter name="firstNumber" value="1.1"/>
        <parameter name="secondNumber" value="-3.4"/>
        <parameter name="result" value="-4.0"/>
        <classes>
            <class name="com.epam.tat.calculator.mult.DoubleMultTest"/>
        </classes>
    </test>

    <test name="Pow test">
        <parameter name="firstNumber" value="2.0"/>
        <parameter name="secondNumber" value="4.0"/>
        <parameter name="result" value="16.0"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.PowTest"/>
        </classes>
    </test>

    <test name="Cos test">
        <parameter name="angle" value="60.0"/>
        <parameter name="result" value="0.5"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.CosTest"/>
        </classes>
    </test>

    <test name="Sin test">
        <parameter name="angle" value="30"/>
        <parameter name="result" value="0.5"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.SinTest"/>
        </classes>
    </test>

    <test name="Tg test">
        <parameter name="angle" value="135"/>
        <parameter name="result" value="-1"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.TgTest"/>
        </classes>
    </test>

    <test name="Sqrt test">
        <parameter name="number" value="16.0"/>
        <parameter name="result" value="4.0"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.SqrtTest"/>
        </classes>
    </test>

    <test name="Ctg test">
        <parameter name="angle" value="45"/>
        <parameter name="result" value="1"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.CtgTest"/>
        </classes>
    </test>

    <test name="IsPositive test">
        <parameter name="number" value="256"/>
        <parameter name="result" value="true"/>
        <classes>
            <class name="com.epam.tat.calculator.misc.IsPositiveTest"/>
        </classes>
    </test>

    <test name="IsNegative test">
        <classes>
            <class name="com.epam.tat.calculator.misc.IsNegativeTest"/>
        </classes>
    </test>

</suite>
